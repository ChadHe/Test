<mvc:View xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns:me="sap.me"
	xmlns:uxap="sap.uxap" xmlns:layout="sap.ui.layout" xmlns:form="sap.ui.layout.form"
	controllerName="mytimesheetproto.controller.S2" xmlns:html="http://www.w3.org/1999/xhtml">
	<App>
		<pages>
			<Page title="{i18n>timeSheet}" showNavButton="true">
				<content>
					<uxap:ObjectPageLayout enableLazyLoading="false" height="40%">
						<uxap:headerTitle>
							<uxap:ObjectPageHeader objectTitle="山田花子">
								<uxap:actions>
									<uxap:ObjectPageHeaderActionButton
										icon="sap-icon://customer" text="Other Person" press="searchEmployee"/>
								</uxap:actions>
							</uxap:ObjectPageHeader>
						</uxap:headerTitle>

						<uxap:headerContent>
							<layout:VerticalLayout>
								<layout:HorizontalLayout>
									<layout:VerticalLayout width="10rem">
										<Label text="90001001" />
										<Label text="HRセクション" />
									</layout:VerticalLayout>

									<form:SimpleForm minWidth="2048" width="60rem"
										maxContainerCols="3" editable="false" layout="ResponsiveGridLayout"
										labelSpanL="5" labelSpanM="5" emptySpanL="3" emptySpanM="0"
										columnsL="3" columnsM="3">
										<form:content>
											<core:Title visible="false" />
											<Label text="当月勤務時間" />
											<Text text="99:99" />
											<Label text="当月時間外" />
											<Text text="99:99" />
											<core:Title />
											<Label text="前月勤務時間" />
											<Text text="99:99" />
											<Label text="前月時間外" />
											<Text text="99:99" />
											<core:Title />
											<Label text="有休残日数" />
											<Text text="99:99" />
										</form:content>
									</form:SimpleForm>
								</layout:HorizontalLayout>
								<layout:HorizontalLayout>
									<Label text="{i18n>startDate}" />
									<DateTimeInput id="StartDate" type="Date" change="mytimesheetproto.util.Formatter.setEndDate"/>

									<Label text="{i18n>endDate}" />
									<DateTimeInput id="EndDate" type="Date" enabled="false" />

									<RadioButtonGroup id="RBG" columns="2" select="mytimesheetproto.util.Formatter.setEndDateR">
										<buttons>
											<RadioButton id="RB3-1" text="{i18n>weekDis}" />
											<RadioButton id="RB3-2" text="{i18n>monthDis}" />
										</buttons>
									</RadioButtonGroup>
								</layout:HorizontalLayout>
							</layout:VerticalLayout>
						</uxap:headerContent>
						<uxap:sections>
							
						</uxap:sections>
					</uxap:ObjectPageLayout>
					
					<ScrollContainer id="calendarScrollContainer" width="100%">
						<layout:VerticalLayout width="100%">
							<me:OverlapCalendar id="id_calendar1" weeksPerRow="2" swipeToNavigate="false" startDate="2016-05-31T08:00:00"></me:OverlapCalendar>
						</layout:VerticalLayout>
					</ScrollContainer>
				</content>
			</Page>
		</pages>
	</App>
</mvc:View>